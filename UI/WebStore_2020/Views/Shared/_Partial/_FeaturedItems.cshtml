@using Microsoft.Extensions.Configuration
@model IEnumerable<Common.WebStore.ViewModels.ProductViewModel>

@{
    var isBrand = Context.Request.Query.ContainsKey("brandId");
    var brandRoutePath = isBrand ? "true" : "false";
}

 <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>
        @if (Model != null)
        {
        @foreach (var item in Model)
        {
            <div class="col-sm-4">  
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div  class="productinfo text-center">
                           
                            <a asp-controller="Catalog" asp-action="ProductDetails" asp-route-id="@item?.Id" asp-route-fromBrand ="@brandRoutePath">
                                <img src="~/images/home/@item?.ImageUrl" alt="" />
                           
                            
                            <h2>@item?.Price.ToString("C")</h2>
                            <p>@item?.Name</p>
                            </a>
                            <a
                                data-id="@item?.Id"
                                class="btn btn-default cart callAddToCart">
                                <i class="fa fa-shopping-cart"></i>
                                Добавить в корзину
                            </a>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="#"><i class="fa fa-plus-square"></i>Добавить в список желаний</a></li>
                            <li><a href="#"><i class="fa fa-plus-square"></i>Добавить к сравнению</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        }

    </div><!--features_items-->